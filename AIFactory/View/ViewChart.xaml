<UserControl x:Class="AIFactory.View.ViewChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIFactory.View" xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" xmlns:hc="https://handyorg.github.io/handycontrol" 
             xmlns:viewmodel="clr-namespace:AIFactory.ViewModel"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel:ViewModelChart></viewmodel:ViewModelChart>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl TabStripPlacement="Right"  Margin="0" Style="{StaticResource TabControlCapsule}" SelectedIndex="3">
            <TabControl.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </TabControl.Resources>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ଳ"/>
                        <TextBlock Text="气体浓度" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <lvc:CartesianChart Grid.Row="1" Series="{Binding GassRationSeries}" LegendTextPaint="{Binding LegendTextPaint}" LegendPosition="Left" Title="{Binding TitleGasContent}"/>
            </TabItem>
            <TabItem HeaderStringFormat="{}{0}3">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x223F;"/>
                        <TextBlock Text="实时曲线"/>
                    </StackPanel>
                </TabItem.Header>
                <lvc:CartesianChart Grid.Row="1" Grid.Column="1" Series="{Binding predictionSeries}" Title="{Binding TitleGasContent}"/>
            </TabItem>
            <TabItem HeaderStringFormat="{}{0}4">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⯎-"/>
                        <TextBlock Text="脱碳量"/>
                    </StackPanel>
                </TabItem.Header>
                <lvc:CartesianChart Series="{Binding CarbonReductionSeries}" Title="{Binding TitleCarbonReductionAmount}"/>
            </TabItem>
            <TabItem HeaderStringFormat="{}{0}1">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ꗶ"/>
                        <TextBlock Text="温度压差"/>
                    </StackPanel>
                </TabItem.Header>
                <lvc:CartesianChart Grid.Column="1" Series="{Binding TPDifferenceSeries}" XAxes="{Binding XAxes}" YAxes="{Binding YAxes}" Title="{Binding TitleRealtimeProgress}"/>
            </TabItem>
            
        </TabControl>
    </Grid>
</UserControl>
