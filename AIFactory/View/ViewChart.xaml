<UserControl x:Class="AIFactory.View.ViewChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIFactory.View" xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" xmlns:hc="https://handyorg.github.io/handycontrol" 
             xmlns:viewmodel="clr-namespace:AIFactory.ViewModel"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel:ViewModelChart></viewmodel:ViewModelChart>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl TabStripPlacement="Bottom"  Margin="0" Style="{StaticResource TabControlCapsule}">
            <TabItem Header="{Binding TitleCarbonReductionAmount}" HeaderStringFormat="{}{0}4">
                <lvc:CartesianChart Series="{Binding CarbonReductionSeries}" Title="{Binding TitleCarbonReductionAmount}"/>
            </TabItem>
            <TabItem Header="TPDifferenceSeries" HeaderStringFormat="{}{0}1">
                <lvc:CartesianChart Grid.Column="1" Series="{Binding TPDifferenceSeries}" XAxes="{Binding XAxes}" YAxes="{Binding YAxes}" Title="{Binding TitleRealtimeProgress}"/>
            </TabItem>
            <TabItem Header="TitleTemperaturePressureDifference" HeaderStringFormat="{}{0}2">
                <lvc:CartesianChart Grid.Row="1" Series="{Binding GassRationSeries}" Title="{Binding TitleTemperaturePressureDifference}"/>
            </TabItem>
            <TabItem Header="TitleGasContent" HeaderStringFormat="{}{0}3">
                <lvc:CartesianChart Grid.Row="1" Grid.Column="1" Series="{Binding predictionSeries}" Title="{Binding TitleGasContent}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
