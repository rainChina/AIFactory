<Window x:Class="AIFactory.View.WinPLCWriter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIFactory.View"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Grid>
         <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" Padding="10" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Icon -->
                            <Label>
                                <hc:IconElement />
                            </Label>
                            <!-- Parameter Name -->
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>

                            <!-- Unit -->
                            <TextBlock Text="{Binding Unit}" Foreground="Gray" Width="60" VerticalAlignment="Center"/>

                            <!-- TextBox for Value -->
                            <hc:TextBox Width="100" Text="{Binding Value}" VerticalAlignment="Center"/>

                            <!-- Button -->
                            <Button Content="Set" Width="60" Command="{Binding SetCommand}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
