<UserControl x:Class="AIFactory.View.ViewDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIFactory.View" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation x:Name="SplashLevelAnimation" Storyboard.TargetName="SplashLevel1"  Storyboard.TargetProperty="Opacity" 
                                         From="1.0" To="0.1"
                                         Duration="0:0:3"
                                         AutoReverse="True"
                                         RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <StackPanel Height="60" Orientation="Horizontal" HorizontalAlignment="Center">
                <Ellipse Name="SplashLevel0" Margin="1" Fill="Green" Width="50" Height="50" Visibility="Collapsed"/>
                <Ellipse Name="SplashLevel1" Margin="1" Fill="Orange" Width="50" Height="50"/>
                <Ellipse Name="SplashLevel2" Margin="1" Fill="OrangeRed" Width="50" Height="50" Visibility="Collapsed"/>
            </StackPanel>
            <hc:SimpleText Foreground="White" Text="喷溅预警级别" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="LeakLevel1"  Storyboard.TargetProperty="Opacity" 
                             From="1.0" To="0.1"
                             Duration="0:0:3"
                             AutoReverse="True"
                             RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Rectangle Name="LeakLevel1" Margin="0,5" Fill="Green" Width="100" Height="30"/>
                <Rectangle Name="LeakLevel2" Margin="0,5" Fill="OrangeRed" Width="100" Height="30"/>
            </StackPanel>
            <hc:SimpleText Foreground="White" Text="漏水级别" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="ExplosionGas"  Storyboard.TargetProperty="Opacity"
                                  From="1.0" To="0.1"
                                  Duration="0:0:3"
                                  AutoReverse="True"
                                  RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Ellipse Name="ExplosionGas" Margin="0,5" Fill="Green" Width="50" Height="50"/>
            </StackPanel>
            <hc:SimpleText Foreground="White" Text="易爆烟气发生" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
        </Grid>

        <Grid Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Ellipse Fill="Green" Width="50" Height="50"  HorizontalAlignment="Center" VerticalAlignment="Center">
                </Ellipse>
                <TextBlock Text="10" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                <hc:SimpleText Grid.Row="1" Foreground="White" Text="碳命中预测" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Ellipse Margin="0,5" Fill="Green" Width="50" Height="50"/>
                <TextBlock Text="10" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                <hc:SimpleText Foreground="White" Text="温度命中预测" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
