<Window x:Class="AIFactory.View.WinDigitalScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIFactory.View" 
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <local:ViewChart></local:ViewChart>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Height="60" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Rectangle Margin="0,5" Fill="Green" Width="50" Height="50"/>
                    <Rectangle Margin="0,5" Fill="LightGreen" Width="50" Height="50"/>
                    <Rectangle Margin="0,5" Fill="OrangeRed" Width="50" Height="50"/>
                    <Rectangle Margin="0,5" Fill="DarkRed" Width="50" Height="50"/>
                </StackPanel>
                <hc:SimpleText Foreground="White" Text="喷溅预警级别" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Rectangle Margin="0,5" Fill="Green" Width="100" Height="30"/>
                    <Rectangle Margin="0,5" Fill="OrangeRed" Width="100" Height="30"/>
                </StackPanel>
                <hc:SimpleText Foreground="White" Text="漏水级别" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Ellipse Margin="0,5" Fill="Green" Width="50" Height="50"/>
                </StackPanel>
                <hc:SimpleText Foreground="White" Text="易爆烟气发生" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
            </Grid>

            <Grid Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Ellipse Margin="0,5" Fill="Green" Width="50" Height="50"/>
                    <hc:SimpleText Foreground="White" Text="碳命中预测" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Ellipse Margin="0,5" Fill="Green" Width="50" Height="50"/>
                    <hc:SimpleText Foreground="White" Text="温度命中预测" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
