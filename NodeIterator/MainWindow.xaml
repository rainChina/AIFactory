<Window x:Class="NodeIterator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NodeIterator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="📁_File">
                    <MenuItem Header="Load" Icon ="📂"  Click="Load_Click"/>
                    <MenuItem Header="Save" Icon ="💾" Click="Save_Click"/>
                </MenuItem>
                <MenuItem Header="🛠️_Tool">
                    <!--<MenuItem Header="Connect" Icon ="🔗 🌳" Click="Connect_Click"/>-->
                    <MenuItem Header="Connect" Icon ="🌳" Click="Browse_Click"/>
                    <MenuItem Header="Connect" Icon ="👁️" Click="Filter_Click"/>
                    <!--<MenuItem Header="🧰 Options"/>
                    <MenuItem Header="🔧 Settings"/>-->
                </MenuItem>
            </Menu>
        </DockPanel>
        <DataGrid Grid.Row="1" x:Name="nodeDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
            IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="节点ID"
                    Binding="{Binding NodeId}"
                    Width="80"/>
                <DataGridTextColumn 
                    Header="节点名称" 
                    Binding="{Binding NodeName}" 
                    Width="120"/>
                <DataGridTextColumn                    
                    Header="显示名称" 
                    Binding="{Binding NodeDeisplayName}" 
                    Width="150"/>
                <!-- NodeDescription 列（设置为可自动调整宽度） -->
                <DataGridTextColumn 
                    Header="节点描述" 
                    Binding="{Binding NodeDescription}" 
                    Width="*"/>
                <!-- * 表示占满剩余宽度 -->
                <!-- NodeDataType 列 -->
                <DataGridTextColumn 
                    Header="数据类型" 
                    Binding="{Binding NodeDataType}" 
                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--<ListView Name="lstNodes" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding NodeId}" />
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding NodeName}" />
                    <GridViewColumn Header="Display Name" DisplayMemberBinding="{Binding NodeDeisplayName}" />
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding NodeDescription}" />
                    <GridViewColumn Header="Data Type" DisplayMemberBinding="{Binding NodeDataType}" />
                </GridView>
            </ListView.View>
        </ListView>-->
    </Grid>
</Window>
